<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/chefImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/chefImage"
            android:layout_width="200dp"
            android:layout_height="142dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo" />

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Welcome!"
            android:textStyle="bold"
            android:alpha="0"
            android:textColor="#424242"
            android:layout_gravity="center_horizontal"
            android:textSize="32sp"/>


        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="80dp"
            android:alpha="0"
            android:layout_marginEnd="80dp"
            android:textColor="@android:color/black"
            android:hint="Input your e-mail"/>

        <LinearLayout
            android:id="@+id/passwordContainer"
            android:layout_width="match_parent"
            android:alpha="0"
            android:layout_height="0dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:hint="Your password goes here."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:gravity="end"
                android:textColor="@android:color/holo_blue_dark"/>

        </LinearLayout>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:alpha="0"
            android:layout_marginEnd="80dp"
            android:background="@drawable/login_button_background"
            android:text="Log in"/>

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:alpha="0"
            android:text="Sign up"
            android:background="@drawable/signup_button_background"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/connectWithLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="50dp"
        android:alpha="0"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="#9E9E9E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Or connect with"
            android:textColor="#9E9E9E"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:background="#9E9E9E"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/instagramImage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/instagram"
            android:layout_marginBottom="-40dp"/>

        <ImageView
            android:id="@+id/vkImage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/vk"
            android:layout_marginBottom="-40dp"/>

        <ImageView
            android:id="@+id/googleImage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/google_plus"
            android:layout_marginBottom="-40dp"/>

        <ImageView
            android:id="@+id/facebookImage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook"
            android:layout_weight="1"
            android:layout_marginBottom="-40dp"/>

    </LinearLayout>

</RelativeLayout>